<UserControl x:Class="Insurgency_theater_editor.Content_preset.KeyValuePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Insurgency_theater_editor.Content_preset"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="10"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="key" Grid.Column="0" Text="{Binding Path=Key,Mode=TwoWay}"></TextBox>
        <TextBlock Grid.Column="1" Text=":" TextAlignment="Center"></TextBlock>
        <TextBox x:Name="value" Grid.Column="2" Text="{Binding Path=Value, Mode=TwoWay}"></TextBox>
    </Grid>
</UserControl>
